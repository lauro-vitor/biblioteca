@{
    ViewData["title"] = "Turmas";
}
<link href="~/lib/pagination/pagination.css" rel="stylesheet" />

<div class="container">
    <div class="row mb-30">
        <div class="col-xs-12">
            <div class="header">
                <h4>Turma</h4>
                <a href="/turma/views/inserir" class="btn btn-primary btn-sm">Inserir</a>
            </div>
        </div>
    </div>

    <div class="row mb-30">
        <div class="col-xs-12 col-sm-6">
            <div class="form-group">
                <label for="idInputTurmaNome">
                    <b>Nome</b>
                </label>
                <div class="flex-center">
                    <input id="idInputTurmaNome" type="text" class="form-control mr-15" />
                    <button onclick="pesquisarTurmaButtonClick()" class="btn btn-sm btn-secondary"> Pesquisar </button>
                </div>
            </div>
        </div>
    </div>

    <div id="tabelaTurmaSemConteudoPanel" class="alert alert-secondary" style="display:block;">
        Nehum registro foi encontrado
    </div>

    <div id="tabelaTurmaPanel" style="display:none;">
        <div class="row mb-30">
            <div class="col-xs-12">

                <table id="idTableTurma" class='table table-bordered table-hover'>
                    <thead>
                        <tr>
                            <th>Nome</th>
                            <th>Período</th>
                            <th>Sigla</th>
                            <th>Turno</th>
                            <th>Ações</th>
                        </tr>
                    </thead>

                    <tbody></tbody>
                </table>

                <div class="paginacao_container">
                    <div class="paginacao_legenda">
                        Exibindo <b> <span id="paginacao_turma_totalVisto"></span> </b>
                        de <b> <span id="paginacao_turma_totalResultado"></span> </b> resultados
                    </div>
                    <div id="paginacao_turma"></div>
                </div>
            </div>
        </div>
    </div>

</div>
@section scripts{
    <script src="/lib/pagination/pagination.min.js" type="text/javascript"></script>
    <script src="/js/turma/TurmaService.js" type="text/javascript"></script>
    <script src="/js/turma/Index.js" type="text/javascript"></script>
}