@{
    ViewData["title"] = "Turma";
}

<div class="container">

    <div class="row mb-30">
        <div class="col-xs-12">
            <div class="header">
                <h4>Inserir Turma</h4>

                <button type="button" class="btn btn-success btn-sm" onclick="inserirTurmaButtonClick()">Inserir</button>
            </div>
        </div>
    </div>

    <div class="row mb-30">

        <div class="col-xs-12 col-sm-6">
            <div class="form-group">
                <label>
                    <b>Nome</b>
                    <span class="cor-vermelha">*</span>
                </label>
                <input id="idInputNome" class="form-control" type="text" />
                <span id="idSpanNome" class="cor-vermelha"></span>
            </div>
        </div>

        <div class="col-xs-12 col-sm-6">
            <div class="form-group">
                <label>
                    <b>Sigla</b>
                </label>
                <input id="idInputSigla" class="form-control" type="text" />
                <span id="spanSigla" class="cor-vermelha"></span>
            </div>
        </div>

    </div>

    <div class="row mb-30">

        <div class="col-xs-12 col-sm-6 ">
            <div class="form-group">
                <label>
                    <b>Período</b>
                    <span class="cor-vermelha">*</span>
                </label>
                <input id="idInputPeriodo" class="form-control" type="number" />
                <span id="idSpanPeriodo" class="cor-vermelha"></span>
            </div>
        </div>

        <div class="col-xs-12 col-sm-6">
            <div class="form-group">
                <label>
                    <b>Turno</b>
                    <span class="cor-vermelha">*</span>
                </label>
                <select id="idSelectTurno" class="form-select">
                </select>
                <span id="idSpanTurno" class="cor-vermelha"></span>
            </div>
        </div>
    </div>
</div>

@section scripts
{
    <script src="/js/turno/turnoService.js" type="text/javascript"></script>
    <script src="/js/turma/turmaService.js" type="text/javascript"></script>
    <script src="/js/turma/inserir.js" type="text/javascript"></script>
}
